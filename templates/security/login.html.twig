{% extends 'base_login.html.twig' %}

{% block body %}

    {% if error %}
        <div>{{ error.messageKey|trans(error.messageData, 'security') }}</div>
    {% endif %}
<div class="container margin">
    <form action="{{ path('login') }}" method="post" class="auth">
        <div class="form-group">
            <label for="username">Login:</label>
            <input name="_username" type="text" class="form-control" id="username" placeholder="login" value="{{ last_username }}">
        </div>
        <div class="form-group">
            <label for="password">Password</label>
            <input type="password" class="form-control" id="password" placeholder="Password" name="_password">
        </div>
        <button type="submit" class="btn btn-primary submit">{% trans %}login{% endtrans %}</button>
    </form>
</div>
{% endblock %}