{# templates/security/login.html.twig #}
{# ... you will probably extend your base template, like base.html.twig #}
{% extends 'base.html.twig' %}

{% block body %}

    {% if error %}
        <div>{{ error.messageKey|trans(error.messageData, 'security') }}</div>
    {% endif %}

    <form action="{{ path('login') }}" method="post" class="auth">
        <label for="username">{% trans %}Username{% endtrans %}:</label>
        <input type="text" id="username" name="_username" value="{{ last_username }}" />

        <label for="password">{% trans %}Password{% endtrans %}:</label>
        <input type="password" id="password" name="_password" />

        {#
            If you want to control the URL the user
            is redirected to on success (more details below)
            <input type="hidden" name="_target_path" value="/account" />
        #}

        <button class="submit" type="submit">{% trans %}login{% endtrans %}</button>
    </form>

{% endblock %}