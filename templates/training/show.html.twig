{% extends 'base.html.twig' %}

{% block title %}{% trans %}Training{% endtrans %}{% endblock %}

{% block body %}
<div class="container">
    <div class="row">
        <div class="col"></div>
        <div class="col"><h1 style="text-align: center">{{ entity.getTrainingName }}</h1></div><div class="col"></div>
    </div>
    <div class="row">
        <div class="d-block p-2 bg-dark text-white btn-block">
        {% trans %}Description{% endtrans %}:
        {% if entity.getDescription is defined %}
            {{ entity.getDescription }}
        {% else %}
            {% trans %}Not founded{% endtrans %}
        {% endif %}
        </div>
    </div>
    <br/>
    <div class="row">
        <div class="col"></div>
        <div class="col"><h1 style="text-align: center">{% trans %}Exercises{% endtrans %}</h1></div><div class="col"></div>
    </div>

    <div class="row">
        <div class="container card margin">
            {% for row in exercises %}
                <div class="row">
                    <div class="margin col">
                        <a href="{{ path('exercise',{'id':row.getExerciseId}) }}"
                           class="btn btn-warning btn-lg btn-info btn-block"
                           role="button">{{ row.getExerciseName }}</a>
                    </div>
                </div>
            {% else %}
                {% trans %}No exercises have been found{% endtrans %}.
            {% endfor %}
        </div>
    </div>

    <br/>

    <div class="row card">
        <div class="collapse" id="collapseExample">
            <div class="card card-body">
                {{ form_start(form) }}
                <div class="col">
                    <div class="margin">
                        {{ form_label(form.exercise_name) }}
                        {{ form_widget(form.exercise_name) }}
                    </div>
                    <div class="margin">
                        {{ form_label(form.description) }}
                        {{ form_widget(form.description) }}
                    </div>
                    <input class="margin btn btn-primary" type="submit" />
                    {{ form_end(form) }}
                </div>

                    {% if result is defined %}
                        {{ result }}
                    {% endif %}
                </div>
            </div>
        </div>
        <div class="card-header">
            <a class="btn btn-primary btn-block" data-toggle="collapse" href="#collapseExample" role="button" aria-expanded="false" aria-controls="collapseExample">
                {% trans %}Create new exercise{% endtrans %}
            </a>
        </div>

    </div>
    <div class="container">
        <div class="row">
            <a href="{{ path('trainings') }}" class="margin btn btn-secondary btn-block">{% trans %}Back{% endtrans %}</a>
        </div>
    </div>
    <div class="container">
        <div class="row">
            <!-- Button trigger modal -->
            <button type="button" class="btn btn-outline-danger btn-block" data-toggle="modal" data-target="#exampleModal">
                {% trans %}Delete training{% endtrans %}
            </button>
        </div>
    </div>
</div>

<!-- Modal -->
<div class="modal fade" id="exampleModal" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="exampleModalLabel">{% trans %}Deleting{% endtrans %}</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">
                {% trans %}Are u sure{% endtrans %}?
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-success" data-dismiss="modal">{% trans %}Leave{% endtrans %}</button>
                <a href="{{ path('training_delete', { 'id' : entity.getTrainingId }) }}" type="button" class="btn btn-danger">{% trans %}Delete{% endtrans %}?</a>
            </div>
        </div>
    </div>
</div>
{% endblock %}