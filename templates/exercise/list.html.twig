{% extends 'base.html.twig' %}

{% block title %}{% trans %}Exercises{% endtrans %}{% endblock %}

{% block body %}
<div class="container-fluid main">
    <br/>
    <div class="main-header d-flex justify-content-between align-items-center">
        <h3>Все упражнения</h3>
        <div class="d-flex justify-content-end"><button type="button" onclick="location.href='{{ path('exercise_create') }}'" class="btn btn-success">Добавить</button></div>
    </div>
    <br/>
</div>
    <div class="list-group">
        {% for exercise in exercises %}
            <a href="#" class="list-group-item list-group-item-action flex-column align-items-start">
                <div class="d-flex w-100 justify-content-between">
                    <h5 class="mb-1">{{ exercise.exerciseName }}</h5>
                </div>
                <p class="mb-1">{{ exercise.description }}</p>
                <small>{{ exercise.description }}</small>
                <div class="d-flex justify-content-end">
                    <button class="btn btn-primary" onclick="location.href='{{ path('exercise_edit', {'id': exercise.exerciseId}) }}'">
                        <i class="far fa-edit"></i>
                    </button>&nbsp;
                    <button class="btn btn-danger" onclick="alert('Удаление не реализовано')"><i class="far fa-trash-alt"></i></button>
                </div>
            </a>
        {% endfor %}
    </div>

{% endblock %}
