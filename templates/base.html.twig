<!DOCTYPE html>
<html>
<head>
    <meta charset="UTF-8">
    {#<meta name="viewport" content="width=device-width, initial-scale=1">#}
    <meta name="viewport" content="initial-scale=1, maximum-scale=1">
    <title>{% block title %}MyTrainer{% endblock %}</title>
    {% block stylesheets %}
        <link href="{{ asset('css/main.css') }}" rel="stylesheet" />
        <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.1.3/css/bootstrap.min.css" integrity="sha384-MCw98/SFnGE8fJT3GXwEOngsV7Zt27NXFoaoApmYm81iuXoPkFOJwJ8ERdknLPMO" crossorigin="anonymous">
        <script src="https://code.jquery.com/jquery-3.3.1.slim.min.js" integrity="sha384-q8i/X+965DzO0rT7abK41JStQIAqVgRVzpbzo5smXKp4YfRvH+8abtTE1Pi6jizo" crossorigin="anonymous"></script>
        <script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.14.3/umd/popper.min.js" integrity="sha384-ZMP7rVo3mIykV+2+9J3UJ46jBk0WLaUAdn689aCwoqbBJiSnjAK/l8WvCWPIPm49" crossorigin="anonymous"></script>
        <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.1.3/js/bootstrap.min.js" integrity="sha384-ChfqqxuZUCnJSK3+MXmPNIyE6ZbWh2IMqE241rYiqJxyMiZ6OW/JmZQ5stwEULTy" crossorigin="anonymous"></script>
    {% endblock %}
</head>
<header>
    <nav class="navbar navbar-expand-md navbar-dark bg-dark">
        <a class="navbar-brand" href="/">{% trans %}My trainer{% endtrans %}</a>
        <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarCollapse" aria-controls="navbarCollapse" aria-expanded="false" aria-label="Toggle navigation">
            <span class="navbar-toggler-icon"></span>
        </button>
        <div class="collapse navbar-collapse" id="navbarCollapse">
            <ul class="navbar-nav mr-auto">
                <li class="nav-item dropdown">
                    <a class="nav-link dropdown-toggle" data-toggle="dropdown" href="#" role="button" aria-haspopup="true" aria-expanded="false">{% trans %}Trainings{% endtrans %}</a>
                    <div class="dropdown-menu">
                        <a class="dropdown-item" href="{{ path('trainings') }}">{% trans %}List{% endtrans %}</a>
                        <div class="dropdown-divider"></div>
                        <a class="dropdown-item" href="{{ path('training_creator') }}">Создать</a>
                        <div class="dropdown-divider"></div>
                        <a class="dropdown-item" href="{{ path('training_stats') }}">Выполненые</a>
                    </div>
                </li>
                <li class="nav-item dropdown">
                    <a class="nav-link dropdown-toggle" data-toggle="dropdown" href="#" role="button" aria-haspopup="true" aria-expanded="false">Упражнения</a>
                    <div class="dropdown-menu">
                        <a class="dropdown-item" href="/exercise/list.html">Список</a>
                        <div class="dropdown-divider"></div>
                        <a class="dropdown-item" href="/exercise/create.html">Создать</a>
                    </div>
                </li>
            </ul>
            <ul class="navbar-nav mt-2 mt-md-0">
                <li class="nav-item">
                    {% if is_training is not null  %}
                    <a class="nav-link" href="{{ path('day_started', { 'training_id' : is_training.getTrainingId.getTrainingId}) }}">{% trans %}Current training{% endtrans %}</a>
                    {% else %}
                    <a class="nav-link" href="{{ path('day') }}">{% trans %}Start a training{% endtrans %}</a>
                    {% endif %}
                </li>
                <li class="nav-item">
                    <a class="nav-link" href="{{ path('logout') }}">{% trans %}Exit{% endtrans %}</a>
                </li>
            </ul>
        </div>
    </nav>
</header>
{% block body %}{% endblock %}
</html>
