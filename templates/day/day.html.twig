{% extends 'base.html.twig' %}
{% block title %}{% trans %}Training day{% endtrans %}{% endblock %}
{% block body %}
    <div class="container">
        <div class="row">
            <div class="card">
                <div class="card-header">
                    <h4>{% trans %}Choose the exercise to begin a set{% endtrans %}</h4>
                </div>
                <div class="card-body">
                    {% for row in grid %}
                        <div class="row">
                            <div class="margin col">
                                <a href="{{ path('day_exercise', {'day_id': day.dayId, 'training_id':day.getTrainingId.getTrainingId, 'exrcise_id':row.exercise_id}) }}"
                                   class="btn btn-lg btn-success btn-block"
                                   role="button">{{ row.exercise_name }}</a>
                            </div>
                        </div>
                    {% else %}
                        {% trans %}No exercise have been found{% endtrans %}.
                    {% endfor %}
                </div>
            </div>
        </div>
    </div>

    <div class="container">
        <div class="container">
            <div class="row">
                <a href="/" class="margin btn btn-secondary btn-block">{% trans %}Back{% endtrans %}</a>
            </div>
        </div>
    </div>

    <div class="container">
        <div class="row">
            <div class="col"></div>
            <div class="col"><a class="btn btn-danger margin " href="{{ path('training_finish', {'day_id': day.dayId}) }}">{% trans %}Close training day{% endtrans %}</a></div>
        </div>
    </div>
{% endblock %}